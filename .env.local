# ============================================
# DocChat AI - 本地测试环境配置
# 用于本地开发测试OAuth功能
# ============================================

# 环境标识
DOCCHAT_ENV=development

# DeepSeek API 配置
OPENAI_API_BASE=https://api.deepseek.com/v1
VECTOR_BACKEND=chroma
DEEPSEEK_MODEL=deepseek-chat

# 数据库配置（本地使用SQLite）
DOCCHAT_DATABASE_URL=sqlite:///./docchat_dev.db

# 允许的域名（CORS配置）
DOCCHAT_ALLOWED_ORIGINS=http://localhost:8501

# API密钥
DOCCHAT_API_KEYS=your_local_api_key_here

# 文件上传限制
DOCCHAT_MAX_UPLOAD_MB=50

# 日志配置
DOCCHAT_LOG_JSON=false

# ============================================
# OAuth 登录配置 - 本地测试
# ============================================

# Google OAuth 配置（使用本地回调URL）
DOCCHAT_GOOGLE_CLIENT_ID=your_google_client_id
DOCCHAT_GOOGLE_CLIENT_SECRET=your_google_client_secret
DOCCHAT_GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# 个人微信登录（本地测试）
DOCCHAT_WECHAT_APP_ID=your_wechat_app_id
DOCCHAT_WECHAT_APP_SECRET=your_wechat_app_secret
DOCCHAT_WECHAT_REDIRECT_URI=http://localhost:8000/auth/wechat/callback

# OAuth 运行时控制
DOCCHAT_OAUTH_STATE_TTL=600
DOCCHAT_OAUTH_HTTP_TIMEOUT=10

# ============================================
# 本地开发配置
# ============================================

# 数据目录
DOCCHAT_DATA_DIR=./data

# 开发服务器配置
UVICORN_WORKERS=1
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000

# 监控和健康检查
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics